<UserControl x:Class="Omail.Components.BlueGradientRect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Omail.Components"
             mc:Ignorable="d" 
             d:DesignHeight="{Binding Width}" d:DesignWidth="{Binding Height}">
    <Rectangle>
        <Rectangle.Fill>
            <LinearGradientBrush EndPoint="0.3,1" StartPoint="0.5,0">
                <GradientStop Color="#FF2281D1"/>
                <GradientStop Color="#FF34268A" Offset="1.0"/>
                <GradientStop Color="#FF33288B" Offset="2"/>
            </LinearGradientBrush>
        </Rectangle.Fill>
    </Rectangle>
</UserControl>
